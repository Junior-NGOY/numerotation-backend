# Configuration de base de données
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# JWT Secret (générez une clé secrète forte en production)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Port du serveur
PORT=8000

# Environnement
NODE_ENV="development"

# Upload des fichiers
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"

# Configuration PINATA pour stockage des fichiers (optionnel)
# Si non configuré, les fichiers seront stockés localement
# Obtenez votre JWT sur: https://app.pinata.cloud/keys
PINATA_JWT=your_pinata_jwt_token_here
PINATA_GATEWAY=https://gateway.pinata.cloud

# URL du frontend (pour CORS)
FRONTEND_URL="http://localhost:3000"

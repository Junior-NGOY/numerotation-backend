# Base de données
DATABASE_URL="postgresql://username:password@localhost:5432/vehicle_registration?schema=public"

# JWT Secret (générez une clé secrète forte en production)
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-complex"

# Port du serveur
PORT=8000

# Environnement
NODE_ENV="development"

# Prisma Configuration pour Railway
PRISMA_CLI_QUERY_ENGINE_TYPE="binary"
PRISMA_CLIENT_ENGINE_TYPE="binary"

# Upload des fichiers
MAX_FILE_SIZE=10485760
UPLOAD_DIR="uploads"

# URL du frontend (pour CORS)
FRONTEND_URL="http://localhost:3000"
